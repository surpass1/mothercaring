  <!-- Main component for a primary marketing message or call to action -->
  <div class="jumbotron">
    <h2><b>Mother Care &raquo; Nurturing mothers</b></h2>
    <div class="row">
  	<%@nurture.each do |a|%>
  	<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
